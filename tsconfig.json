{
  "compilerOptions": {
    "module": "CommonJS", // Change from "ESNext" to "CommonJS"
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/controller/creatorProduct"],
  "exclude": ["node_modules"]
}